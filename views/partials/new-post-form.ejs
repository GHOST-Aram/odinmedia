<form method="post" action="" 
    class="new-post container p-2 space-y-2" 
    novalidate
>
    <div class="flex flex-row items-start justify-start gap-4">
        <a href="/profiles/me">
            <img 
                src= "<%=user&&user.pictureUrl%>"
                alt= "<%=user&&user.name%>" 
                class="h-10 w-10 rounded-full"
            >
        </a>
        <textarea 
            class="w-full font-light p-2 h-32 
                border rounded-sm text-sm text-gray-500"
            placeholder="What on your mind?" 
            name="post_content" 
            required      
        ></textarea>
    </div>
    <div 
        class="flex flex-col justify-between gap-4 
            items-center w-full lg:flex-row">
        <input 
            type="url" name="media_url" id="media-url"
            placeholder="Add image url" 
            class="w-full px-4 py-2 rounded-md border"
        >
        <span class="font-bold text-gray-500">OR</span>
        <input 
            type="file" name="media_file" id="media" 
            class="w-full px-4 py-2 rounded-md border"
        >
    </div>
    <button
        type="submit"
        class="bg-blue-500 text-white font-md px-4 py-2 rounded-sm
        w-full hover:bg-blue-600 transition-all"
    >
        Publish Post
    </button>
</form>
