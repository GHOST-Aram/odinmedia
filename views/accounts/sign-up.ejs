<%-include('../partials/head.ejs') %> 
    <main>
        <h1 
            class="text-blue-500 font-bold text-center text-xl mb-4">
                Welcome to OdinMedia
            </h1>
        <section>
            <div class="container space-y-4 lg:w-3/5">

                <form 
                    action="" 
                    method="post"
                    class="space-y-4 p-4 rounded-lg shadow-md shadow-slate-400"
                >
                <div class="justify-between gap-2 md:flex lg:flex flex-row">
                    <div class="flex flex-col w-full">
                        <label for="first-name"
                            class="font-md text-xl"
                        >
                            First Name
                        </label>
                        <input
                            class="py-2 px-2 border-b-2 border-slate-400"
                            type="text" 
                            name="first_name" 
                            id="first-name"
                            placeholder="John"
                        >
                    </div>
                    <div class="flex flex-col w-full">
                        <label for="last-name"
                            class="font-md text-xl"
                        >
                            Last Name
                        </label>
                        <input
                            class="py-2 px-2 border-b-2 border-slate-400"
                            type="text" 
                            name="last_name" 
                            id="last-name"
                            placeholder="Doe"
                        >
                    </div>
                </div>
                <div class="flex flex-col w-full">
                    <label for="email"
                    class="font-md text-xl"
                        >
                            Email
                        </label>
                        <input
                            class="py-2 px-2 border-b-2 border-slate-400"
                            type="email" 
                            name="email" 
                            id="email"
                            placeholder="xyzbrx@gmail.com"
                            >
                </div>
                <div class="justify-between gap-2 md:flex lg:flex flex-row">
                    <div class="flex flex-col w-full">
                        <label for="password"
                            class="font-md text-xl"
                        >
                            Password
                        </label>
                        <input 
                            class="py-2 px-2 border-b-2 border-slate-400"
                            type="password" 
                            name="password" 
                            id="password"
                            placeholder="New Password"
                        >
                    </div>
                    <div class="flex flex-col w-full">
                        <label for="password2"
                            class="font-md text-xl"
                        >
                            Confirm Password
                        </label>
                        <input 
                            class="py-2 px-2 border-b-2 border-slate-400"
                            type="password" 
                            name="password2" 
                            id="password2"
                            placeholder="Repeat Password"
                        >
                    </div>
                </div>
                    <div>
                        <button 
                            class="w-full bg-green-500 text-white font-bold py-2 rounded-sm"
                            type="submit" 
                        >
                            SIGN UP
                        </button>
                    </div>
                </form>
                <div
                    class="p-4 rounded-lg shadow-md shadow-slate-400"
                >
                <a href="/login">
                    <button 
                        class="w-full bg-blue-500 text-white font-bold py-2 rounded-sm"
                        type="button" 
                    >
                        ALREADY REGISTERED? LOGIN
                    </button>
                </a>
                </div>
            </div>
        </section>
    </main>
    <%-include('../partials/footer.ejs') %>
</body>
</html>