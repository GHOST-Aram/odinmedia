<%-include('../partials/head.ejs') %>
    <main>
        <h1 
            class="text-blue-500 font-bold text-center text-xl mb-4">
                Log in to OdinMedia
            </h1>
        <section>
            <div class="container space-y-4 lg:w-3/5">

                <form 
                    action="" 
                    method="post"
                    class="space-y-4 p-4 rounded-lg shadow-md shadow-slate-400
                        
                    "
                >
                    <div class="flex flex-col">
                        <label for="email"
                            class="font-md text-xl"
                        >
                            Email
                        </label>
                        <input
                            class="py-2 px-2 border-b-2 border-slate-400"
                            type="email" 
                            name="email" 
                            id="email"
                            placeholder="xyzbrx@gmail.com"
                        >
                    </div>
                    <div class="flex flex-col">
                        <label for="password"
                            class="font-md text-xl"
                        >
                            Password
                        </label>
                        <input 
                            class="py-2 px-2 border-b-2 border-slate-400"
                            type="password" 
                            name="password" 
                            id="password"
                            placeholder="Current-password"
                        >
                    </div>
                    <div>
                        <button 
                            class="w-full bg-blue-500 text-white font-bold py-2 rounded-sm"
                            type="submit" 
                        >
                            LOGIN
                        </button>
                    </div>
                </form>
                <div
                    class="p-4 rounded-lg shadow-md shadow-slate-400 flex flex-col gap-4
                        lg:flex-row
                    "
                >
                <a href="/auth/facebook" class="lg:w-full">
                    <button 
                        class="w-full bg-blue-500  py-2 rounded-sm"
                        type="button" 
                    >
                        <i class="fa-brands fa-facebook text-white font-bold font-xl">
                            LOGIN WITH FACEBOOK
                        </i> 
                    </button>
                </a>
                <a href="/auth/sign-up" class="lg:w-full">
                    <button 
                        class="w-full bg-green-500 text-white font-bold py-2 rounded-sm"
                        type="button" 
                    >
                        CREATE NEW ACCOUNT
                    </button>
                </a>
                </div>
            </div>
        </section>
    </main>
    <%-include('../partials/footer.ejs') %>
</body>
</html>