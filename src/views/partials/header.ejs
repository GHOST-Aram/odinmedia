<%-include('./head.ejs') %>
<header class="bg-blue-500 mb-4 fixed top-0 left-0 right-0 z-10">
        <div class="container py-2 flex flex-row  items-center justify-between">
            <button 
                class="text-white font-bold text-xl hover:bg-blue-600 p-2 
                    rounded-sm transition-all">
                OdinMedia
            </button>
            <nav class="hidden justify-center gap-8 items-center flex-row md:flex lg:hidden">
                <button 
                    class="p-2 rounded-sm hover:bg-white transition-all
                    hover:text-blue-500 text-slate-600
                    flex flex-col items-center text-lg"
                    onclick="window.location.assign('/')"
                >
                    <i class="fa-solid fa-house "></i>
                    <span class="">Posts</span>
                </button>
                <button 
                    class="p-2 rounded-sm hover:bg-white hover:text-blue-500 
                    flex flex-col items-center transition-all text-lg text-slate-600"
                    onclick="window.location.assign('/social/people-you-may-know')"
                >
                    <i class="fa-solid fa-users-line "></i>
                    <span class="">People</span>
                </button>
                <button 
                    class="p-2 rounded-sm hover:bg-white 
                    hover:text-blue-500 text-slate-600 text-lg
                    flex flex-col items-center transition-all"
                    onclick="window.location.assign(
                        '/social/<%=user.id%>/friends'
                    )"
                >
                    <i class="fa-solid fa-users-line"></i> 
                    <span>Friends</span>
                </button>
            </nav>
            <div class="flex flex-row gap-4 justify-end">
                <div class="flex flex-row items-center justify-between gap-2">
                    <button 
                        class="p-2 rounded-md transition-all hover:bg-red-500 text-red-500
                        hover:text-blue-600 transition-all hidden md:block lg:hidden xl:hidden
                        font-bold text-red-500 space-x-4 text-start border border-red-500"
                        onclick="window.location.assign('/auth/logout')"
                    >
                        <i class="fa-solid fa-power-off"></i>
                        <span>Logout</span>
                    </button>
                    <button class="profile flex flex-row justify-end items-center gap-4 
                        lg:hidden hover:bg-white p-2 transition-all rounded-sm"
                        onclick="window.location.assign('/profiles/<%=user.id%>')"
                        data-set="<%=user.id%>"
                    >
                        <img 
                            class="w-10 h-10 rounded-full"
                            src= "<%=user&&user.pictureUrl%>"
                            alt="<%=user&&user.name%>"
                        >
                    </button>
                </div>
                <button 
                    id="menu"
                    class="text-lg font-bold text-white hover:bg-blue-600 
                     transition-all py-2 px-4
                    md:hidden lg:hidden xl:hidden">
                    <i class="fa-solid fa-bars"></i>
                </button>
            </div>
        </div>
   </header>
   <main class="lg:flex lg:flex-row lg:gap-4">
        <section class="w-1/5">
            <%-include('./side-bar') %>
        </section>
        <section aria-live="polite"
            class="container pb-12 space-y-4 w-full lg:w-3/5 xl:w-2/5
            pt-20 md:pt-12 lg:pt-16"
        > 
            <h1 class="font-bold bg-blue-500 p-2 text-white md:mt-8 lg:mt-0">
                <%=heading%>
            </h1>
            <hr>